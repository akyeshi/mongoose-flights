<%- include('../partials/header') %>

<h2><%= flight.airline %> Flight</h2>

<p>--------- Flight Details ---------</p>

<div class="airline">
  <p>Airline: <%= flight.airline %></p>
</div>
<div class="airline">
  <p>Airport: <%= flight.airport %></p>
</div>
<div class="airline">
  <p>Flight No: <%= flight.flightNo %></p>
</div>
<div class="airline">
  <p>Departs: <%= flight.departs %></p>
</div>

<p>-------- Add Destinations --------</p>
<!-- add to cast form below this comment -->
<form
  id="add-flight-to-destination"
  action="/flights/<%= flight._id %>/destinations"
  method="POST"
>
  <label>Airport: 
    <select name="airport">
      <option value="AUS" selected>AUS</option>
      <option value="DFW">DFW</option>
      <option value="DEN">DEN</option>
      <option value="LAX">LAX</option>
      <option value="SAN">SAN</option>
    </select><br>
  <label>Arrival: <input type="date" name="arrival" /><br>
  <input type="submit">
  <!-- <button type="submit">Add Destination</button> -->
</form>

<p>--------- Flight Arrivals ---------</p>
<br />

<% if (flight.destinations.length) { %>
  <table>
    <thead>
      <tr>
        <th>Date</th>
        <th>Destination</th>
        <th>Arrival</th>
      </tr>
    </thead>
    <tbody>
      <% flight.destinations.forEach(dstn => { %>
        <tr>
          <td><%= dstn.createdAt.toLocaleDateString()  %></td>
          <td><%= dstn.airport  %></td>
          <td><%= dstn.arrival  %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
<% } else { %>
  <h5>No Destinations Yet.</h5>
<% } %>


<%- include('../partials/footer') %>
